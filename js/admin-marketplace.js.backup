function toggleDiscountStatusMultiple(packageId, discountIndex, status) {
    const pkg = packages.find(p => p.id === packageId);
    if (!pkg || !pkg.discounts || !pkg.discounts[discountIndex]) return;
    
    pkg.discounts[discountIndex].active = (status === 'active');
    
    // Save to localStorage
    localStorage.setItem('marketplacePackages', JSON.stringify(packages));
    
    openDiscountsView(); // Refresh the modal
    renderAllPackages();
    
    // Don't show alert, just update silently
}

function removeDiscountMultiple(packageId, discountIndex) {
    const pkg = packages.find(p => p.id === packageId);
    if (!pkg || !pkg.discounts) return;
    
    if (confirm(`Remove this discount?`)) {
        pkg.discounts.splice(discountIndex, 1);
        
        // Save to localStorage
        localStorage.setItem('marketplacePackages', JSON.stringify(packages));
        
        openDiscountsView(packageId); // Refresh the modal with the same package
        renderAllPackages();
    }
}


// Helper function to check if package has discounts
function hasDiscounts(pkg) {
    return pkg.discounts && Array.isArray(pkg.discounts) && pkg.discounts.length > 0;
}

// Helper function to get active discounts for a package
function getActiveDiscounts(pkg) {
    if (!hasDiscounts(pkg)) return [];
    return pkg.discounts.filter(d => d.active !== false);
}
