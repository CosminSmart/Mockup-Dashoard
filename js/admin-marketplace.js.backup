            `;
            
            discountsList.insertAdjacentHTML('beforeend', discountHTML);
        }

        function removeDiscountRow(prefix, index) {
            const discountsList = document.getElementById(`${prefix}_discountsList`);
            const discountItem = discountsList.querySelector(`.discount-item[data-index="${index}"]`);
            if (discountItem) {
                discountItem.remove();
            }
            
            // If no discounts left, show message
            const remainingDiscounts = discountsList.querySelectorAll('.discount-item');
            if (remainingDiscounts.length === 0) {
                discountsList.innerHTML = '<p style="color: #999; text-align: center; padding: 2rem;">No discounts added yet. Click "Add Discount" to create one.</p>';
            }
        }

        function toggleSpecificClients(prefix, index) {
            const target = document.querySelector(`.discount-target[data-index="${index}"]`);
            const specificGroup = document.querySelector(`.specific-clients-group[data-index="${index}"]`);
            
            if (target && specificGroup) {
                specificGroup.style.display = target.value === 'specific' ? 'block' : 'none';
            }
        }

        function collectDiscounts(prefix) {
            const discountsList = document.getElementById(`${prefix}_discountsList`);
            const discountItems = discountsList.querySelectorAll('.discount-item');
            const discounts = [];
            
            discountItems.forEach((item, index) => {
                const typeRadio = document.querySelector(`input[name="${prefix}_discountType_${index}"]:checked`);
                const value = item.querySelector(`.discount-value[data-index="${index}"]`).value;
                const target = item.querySelector(`.discount-target[data-index="${index}"]`).value;
                const clients = item.querySelector(`.discount-clients[data-index="${index}"]`)?.value || '';
                
                if (typeRadio && value && parseFloat(value) > 0) {
                    discounts.push({
                        type: typeRadio.value,
                        value: parseFloat(value),
                        target: target,
                        clients: clients,
                        active: true
                    });
                }
            });
            
            return discounts;
        }

